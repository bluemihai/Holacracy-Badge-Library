.row
  - if librarian_or_admin?
    .large-1.medium-1.small-1.columns= link_to comp_tier.name, edit_comp_tier_path(comp_tier)
  - else
    .large-1.medium-1.small-1.columns= comp_tier.name
  .large-1.medium-1.small-1.columns= "$#{comp_tier.monthly_draw}"
  .large-1.medium-1.small-1.columns= "#{comp_tier.fixed_draw / 10.0}%"
  .large-9.medium-9.small-9.columns
    - badge_sets = comp_tier.badge_sets
    - badge_sets.each do |bs|
      = render 'badge_sets/inline', badge_set: bs