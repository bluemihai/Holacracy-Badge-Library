%h1 Listing Compensation Tiers

%table
  %thead
    %tr
      %th Name
      %th Monthly draw
      %th Fixed draw
      %th
      %th
      %th

  %tbody
    - @comp_tiers.each do |comp_tier|
      %tr
        %td= comp_tier.name
        %td= "$#{comp_tier.monthly_draw}"
        %td= "#{comp_tier.fixed_draw / 10.0} %"
        %td= link_to 'Show', comp_tier
        %td= link_to 'Edit', edit_comp_tier_path(comp_tier)
        %td= link_to 'Destroy', comp_tier, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Comp tier', new_comp_tier_path
