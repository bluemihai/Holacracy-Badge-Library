%tr
  %th.avatar= image_tag user.gravatar(30)
  %td= link_to user.name, "http://glassfrog.holacracy.org/people/#{user.glassfrog_id}"
  %td= user.badge_set ? link_to(user.badge_set.name, user.badge_set) : ''
  %td.text-center= link_to user.badges_held.count, holders_path
  %td.text-center= link_to user.badges_pending.count, holders_path
  %td.text-right= number_to_currency(user.legacy_p_unit_grant, precision: 0)
  %td.text-right= link_to number_to_currency(user.badge_set.comp_tier.monthly_draw, precision: 0), user.badge_set rescue ''
  %td.text-center= "#{user.focus_time}%"
  %td.text-right= number_to_currency(user.monthly_draw, precision: 0) rescue 0
  %td= render 'actions', user: user
