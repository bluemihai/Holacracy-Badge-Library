= simple_form_for(@badge) do |f|
  = f.error_notification

  .form-inputs
    - values = [['Draft', 'draft'], ['Proposed', 'proposed'], ['Accepted', 'accepted']]
    .large-3.small-3.columns
      - if librarian_or_admin? || @badge.persisted?
        = f.association :proposer, collection: @users, label_method: :short, include_blank: true
      - else
        = f.association :proposer, collection: @users, label_method: :short, selected: current_user.try(:id)

    %hr
    - if librarian_or_admin?
      .large-8.small-6.columns
        .large-6.columns= f.input :name, label: 'Badge Name', autofocus: true
        .large-6.columns= f.input :focus
        .large-6.columns= f.input :description, label: 'Basic Badge Description', input_html: {rows: 5}
        .large-6.columns= f.input :mechanism, label: 'Optional Mechanism for gaining/losing', input_html: {rows: 5}
      .large-4.small-6.columns.admin-only
        = f.input :status, collection: values, include_blank: true
        = f.input :proposal_date, include_blank: true
        = f.input :acceptance_date, include_blank: true
    - else
      .large-8.small-6.columns= f.input :name, label: 'Badge Name', autofocus: true
      .large-4.small-6.columns= f.input :focus
      %div
      .large-6.small-12.columns= f.input :description, label: 'Basic Badge Description', input_html: {rows: 5}
      .large-6.small-12.columns= f.input :mechanism, label: 'Optional Mechanism for gaining/losing', input_html: {rows: 5}
    %div
    .large-4.small-12.columns= f.input :level_1, label: 'Level 1 Description', input_html: {rows: 4}
    .large-4.small-12.columns= f.input :level_2, label: 'Level 2 Description', input_html: {rows: 4}
    .large-4.small-12.columns= f.input :level_3, label: 'Level 3 Description', input_html: {rows: 4}
    %div
    .large-4.small-12.columns= f.input :level_4, label: 'Level 4 Description', input_html: {rows: 4}
    .large-4.small-12.columns= f.input :level_5, label: 'Level 5 Description', input_html: {rows: 4}
    .large-4.small-12.columns= f.input :level_6, label: 'Level 6 Description', input_html: {rows: 4}
    %div
    .large-4.small-12.columns= f.input :level_7, label: 'Level 7 Description', input_html: {rows: 4}
    .large-4.small-12.columns= f.input :level_8, label: 'Level 8 Description', input_html: {rows: 4}
    .large-4.small-12.columns= f.input :level_9, label: 'Level 9 Description', input_html: {rows: 4}

  %hr

  .form-actions
    - if params[:action] == 'new'
      = f.button :submit, 'Crate New Badge Draft'
    - else
      = f.button :submit, 'Edit Badge'
