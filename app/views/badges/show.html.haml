%p.large-12.medium-12
  %h2= "#{@badge.name_with_focus} Badge"
  .row
    %strong.large-2.columns.text-right Status
    .large-10.columns= @badge.status.try(:capitalize)
    .large-4.columns
  .row
    %strong.large-2.columns.text-right Proposer
    .large-6.columns= @badge.proposer.try(:name)
    .large-4.columns
  .row
    %strong.large-2.columns.text-right Current Holders
    .large-6.columns= @badge.current_holders
    .large-4.columns
  .row
    %strong.large-2.columns.text-right Description
    .large-6.columns.box= @badge.description
    .large-4.columns
  - unless @badge.mechanism == ''
    .row
      %strong.large-2.columns.text-right Mechanism
      .large-6.columns.box= @badge.mechanism
      .large-4.columns

%br
%hr
.medium-4.large-4.columns
  .badge33
    %b Level 1:
    = @badge.level_1
.medium-4.large-4.columns
  .badge33
    %b Level 2:
    = @badge.level_2
.medium-4.large-4.columns
  .badge33
    %b Level 3:
    = @badge.level_3
%br
%hr
.medium-4.large-4.columns
  .badge33
    %b Level 4:
    = @badge.level_4
.medium-4.large-4.columns
  .badge33
    %b Level 5:
    = @badge.level_5
.medium-4.large-4.columns
  .badge33
    %b Level 6:
    = @badge.level_6
%br
%hr
.medium-4.large-4.columns
  .badge33
    %b Level 7:
    = @badge.level_7
.medium-4.large-4.columns
  .badge33
    %b Level 8:
    = @badge.level_8
.medium-4.large-4.columns
  .badge33
    %b Level 9:
    = @badge.level_9
%br
%hr

%span.green= link_to 'All Badges', badges_path
- if librarian_or_admin? || @badge.status == 'draft'
  \|
  %span.green= link_to 'Edit', edit_badge_path(@badge)
- if librarian_or_admin?
  \|
  %span.green= link_to 'Destroy', @badge, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this badge?' }
  - if @badge.status == 'proposed'
    \|
    %span.green= link_to 'Accept', accept_badge_path(@badge)
    \|
    %span.green= link_to 'Reject', reject_badge_path(@badge)
- if @badge.status == 'draft'
  \|
  %span.green= link_to 'Propose', propose_badge_path(@badge)
