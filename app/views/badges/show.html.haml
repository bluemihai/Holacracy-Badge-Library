%p#notice= notice

%p.large-12.medium-12
  %h2= "#{@badge.name} Badge"
  = render 'card', badge: @badge

%br
%hr
.medium-4.large-4.columns
  .badge33
    %b Level 1:
    = @badge.level_1
.medium-4.large-4.columns
  .badge33
    %b Level 2:
    = @badge.level_2
.medium-4.large-4.columns
  .badge33
    %b Level 3:
    = @badge.level_3
%br
%hr
.medium-4.large-4.columns
  .badge33
    %b Level 4:
    = @badge.level_4
.medium-4.large-4.columns
  .badge33
    %b Level 5:
    = @badge.level_5
.medium-4.large-4.columns
  .badge33
    %b Level 6:
    = @badge.level_6
%br
%hr
.medium-4.large-4.columns
  .badge33
    %b Level 7:
    = @badge.level_7
.medium-4.large-4.columns
  .badge33
    %b Level 8:
    = @badge.level_8
.medium-4.large-4.columns
  .badge33
    %b Level 9:
    = @badge.level_9
%br
%hr

= link_to 'Edit', edit_badge_path(@badge)
- if user_signed_in? && (current_user.is_admin? || current_user.is_librarian?)
  \|
  = link_to 'Back', badges_path
  \|
  = link_to 'Destroy', @badge, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this badge?' }