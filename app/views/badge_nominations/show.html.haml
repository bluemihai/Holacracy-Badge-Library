%p
  .large-2.columns
    %h5 Badge Nomination
    %strong= @badge_nomination.user.name
    %br &nbsp;&nbsp;for
    %strong= @badge_nomination.badge.name
    - if @badge_nomination.current_level && @badge_nomination.current_level != ''
      %br &nbsp;&nbsp;at level
      %strong= @badge_nomination.current_level
  .large-1.columns
    %h5 Status
    %p
      = @badge_nomination.status.capitalize
      %br
      &nbsp;&nbsp;at level 
      = @badge_nomination.level_granted

  .large-6.columns
    %h5 Evidence
    %p= @badge_nomination.evidence
  %br
  %br
  %br
  %br
  %br
  %hr

- if librarian_or_admin?
  .admin-only
    %button= link_to 'Add Validation', new_nomination_vote_path(badge_nomination_id: @badge_nomination.id)
    - if @validations.count > 0
      %h5 Validations
      = render @validations
      %hr

  %p
  .admin-only
    %button= link_to 'Edit Nomination', edit_badge_nomination_path(@badge_nomination)
    %button= link_to 'Destroy Nomination', @badge_nomination, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this nomination?' }
- else
  %button= link_to 'Add Your Validation', new_nomination_vote_path(badge_nomination_id: @badge_nomination.id)